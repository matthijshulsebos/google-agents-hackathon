# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1

# Vertex AI Search Datastore IDs (Engine IDs)
NURSING_DATASTORE_ID=your-nursing-engine-id
HR_DATASTORE_ID=your-hr-engine-id
PHARMACY_DATASTORE_ID=your-pharmacy-engine-id

# Model Configuration
MODEL_NAME=gemini-2.5-flash
TEMPERATURE=0.2

# Search Configuration
DYNAMIC_THRESHOLD=0.3
MAX_RESULTS=5

# Conversation Settings
CONVERSATION_ENABLED=true
MAX_CONVERSATION_TURNS=3

# System Settings
LOG_LEVEL=INFO
TIMEOUT=30
ENVIRONMENT=development

# Service Account Key Path (for local development)
# GOOGLE_APPLICATION_CREDENTIALS=./sakey.json
